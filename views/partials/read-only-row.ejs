<div class="row bg-transparent  final download read-row" name="<%= orderedClasses[i]._id %>" style="height: 12rem" id="<%= orderedClasses[i].class_name %>">

  <div class="col-1 mt-1 mb-1   rounded-3 " style="background-color: white; width:120px" >

    <div class="" style="position: relative; background-color:transparent; display:block; width:100%; height:100%">

      <h1 class="p-0 period" style="font-size: 550%; color:#fec37c; position: absolute;  padding:0; display:inline-block; top: -15px;left:40px; right: 0px; background-color:transparent; text-align:center;overflow:hidden" ><strong><%= orderedClassPeriods[i]%></strong></h1>
      <div class="mt-4 ms-0" style="position: absolute; top: 45px; left: 0.1rem">
        <h6 class=" class-name" style="display: inline-block; font-size: 1.00rem; color:#2F86A6; overflow-wrap: normal; width: 120px; margin-top: -20px; margin-left: -20px; margin-bottom:0px; color:#2F86A6" id=""><%=  orderedClasses[i].class_name %></h6>
        <h6 class=" text-truncate class-type <%=orderedClasses[i].class_type%> " style="display: block; margin-left: -20px; font-size: 0.7rem; margin-top: 10px" id=""><%= "Group: " + orderedClasses[i].class_type%></h6>
        <h10 class=" text-truncate teacher" style="display: inline; font-size: 1.1vw; margin-left: -20px;"><strong><%= orderedClasses[i].teacher_name %></strong></h10>

      </div>
      <p hidden class="code"><%=orderedClasses[i].regular_teacher%></p>
    </div>


  </div>
  <div class="col ms-0 mt-1 me-1 mb-1  border border border-dark rounded-3 shadow" style="width: 330px">

    <div class="read-only ms-0 mt-1 me-1 mb-1  daily-report-textarea today" style= "" id="<%= classTag["todaysClass"] + orderedClassPeriods[i] + "FinalReadOnly"%>"><%= orderedClasses[i].current_report.todays_class %></div>
  </div>
  <div class="col m-1 border border-dark rounded-3 shadow" style="width: 330px">

    <div class="read-only ms-0 mt-1 me-1 mb-1  daily-report-textarea homework" style= "" id="<%= classTag["homework"] + orderedClassPeriods[i] + "FinalReadOnly"%>"><%= orderedClasses[i].current_report.homework %></div>

  </div>
  <div class="col m-1 border border-dark rounded-3 shadow" style="width: 330px">

      <div class="read-only ms-0 mt-1 me-1 mb-1  daily-report-textarea nextclass" style= "" id="<%= classTag["nextClass"]  + orderedClassPeriods[i] + "FinalReadOnly"%>"><%= orderedClasses[i].current_report.next_class %></div>
  </div>

</div>
